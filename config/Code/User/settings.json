    // === VIM CFG

    "vim.leader": "<space>",

    "vim.easymotion": true,
    "vim.surround": true,

    "vim.useSystemClipboard": true,
    "vim.useCtrlKeys": true,
    // "vim.incsearch": true // Show the next match while entering a search
    "vim.hlsearch": true, // Highlight search

    "vim.insertModeKeyBindings": [
        {
            "before": ["j", "j"],
            "after": ["<Esc>"]
        }
    ],
    "vim.visualModeKeyBindings": [
        {
            "before": ["j"],
            "after": ["g","j"], "silent": true
        },
        {
            "before": ["k"],
            "after": ["g","k"], "silent": true
        },
        {
            "before": ["H"],
            "after": ["^"]
        },
        {
            "before": ["L"],
            "after": ["$"]
        },
        // { "before": ["<c-j>"], "after": ["<c-d>","z","z"] },
        // { "before": ["<c-k>"], "after": ["<c-u>","z","z"] },
        // drag selected lines
        {
            "before": ["J"],
            "commands": ["editor.action.moveLinesDownAction"]
        },
        {
            "before": ["K"],
            "commands": ["editor.action.moveLinesUpAction"]
        },
        // comment selected lines
        {
            "before": ["<leader>", "c"],
            "commands": [ "editor.action.commentLine", "extension.vim_escape" ],
        },
        // Bind > and < in visual mode to indent/outdent lines (repeatable):
        {
            "before": [ ">" ],
            "commands": ["editor.action.indentLines"]
        },
        {
            "before": [ "<" ],
            "commands": ["editor.action.outdentLines"]
        },
        // Bind p in visual mode to paste without overriding the current register:
        {
            "before": [
                "p",
            ],
            "after": [
                "p",
                "g",
                "v",
                "y"
            ]
        },
    ],
        // Bind L to $ and H to ^ in operator pending mode makes yL and dH work like y$ and d^ respectively:
    "vim.operatorPendingModeKeyBindings": [
        {
            "before": ["h"],
            "after": ["^"]
        },
        {
            "before": ["l"],
            "after": ["$"]
        },
    ],
    "vim.normalModeKeyBindingsNonRecursive": [
        {
            "before": ["H"],
            "after": ["^"]
        },
        {
            "before": ["L"],
            "after": ["$"]
        },
        {
            "before": ["j"],
            "after": ["g","j"], "silent": true
        },
        {
            "before": ["k"],
            "after": ["g","k"], "silent": true
        },
        {
            "before": ["<s-u>"],
            "commands": [":redo"]
        },
        {
            "before": ["<leader>", "c"],
            "commands": [ "editor.action.commentLine"],
        },
        {
            "before": ["<esc>"],
            "commands": [":nohl"]
        },
        {
            "before": ["K"],
            "commands": ["lineBreakInsert"], "silent": true
        },
        {
            "before": ["J"],
            "after": ["m","z","J","`","z"], "silent": true
        },
        {
            "before": ["Q"],
            "after": ["@","q"], "silent": true
        },

        // INTELLISENSE
        { "before": ["<leader>", "i"], "commands": ["editor.action.formatDocument"] },
        { "before": ["<leader>", "K"], "commands": ["editor.action.marker.prev"] },
        { "before": ["<leader>", "J"], "commands": ["editor.action.marker.next"] },
        { "before": ["<leader>", "F"], "commands": ["editor.action.quickFix"] },

        // LSP
        { "before": ["g", "r"], "commands": ["references-view.findReferences"] },
        { "before": ["g", "h"], "commands": ["editor.action.showDefinitionPreviewHover"] },
        { "before": ["<leader>", "g"], "commands": ["editor.action.revealDefinition"] },
        { "before": ["<leader>", "s","r"], "commands": ["editor.action.rename"] },

        // FILES
        { "before": ["<leader>", "R"], "commands": ["fileutils.renameFile"] },
        { "before": ["<leader>", "X"], "commands": ["fileutils.removeFile"] },
        { "before": ["<leader>", "N"], "commands": ["welcome.showNewFileEntries"] },

        { "before": ["<leader>", "w"], "commands": [":w"] },
        { "before": ["<leader>", "q"], "commands": [":wq"] },
        { "before": ["<leader>", "x"], "commands": [":wq"] },
        { "before": ["<leader>", "<Esc>"], "commands": [":q!"] },

        { "before": ["y", "p"], "commands": ["copyFilePath"] },
        { "before": ["y", "n"], "commands": ["fileutils.copyFileName"]},
        // NAVIGATION
        { "before": ["<leader>", "e"], "commands": [ "workbench.view.explorer"] },

        // jumping up and down with centetering
        { "before": ["<c-d>"], "after": ["<c-d>","z","z"] },
        { "before": ["<c-u>"], "after": ["<c-u>","z","z"] },

        // search with centering
        { "before": ["n"], "after": ["n","z","z","z","v"] },
        { "before": ["N"], "after": ["N","z","z","z","v"] },

        // splits
        { "before": ["<leader>", "v"], "commands": [":vsplit"] },
        { "before": ["<leader>", "V"], "commands": [":split"] },

        // GO TO FILE
        { "before": ["<leader>", "p"], "commands": ["workbench.action.quickOpen"] },
        { "before": ["<leader>", "s", "f"], "commands": ["workbench.action.quickOpen"] },

        // // switch b/w buffers
        { "before": ["<leader>", "h"], "commands": ["workbench.action.focusLeftGroup"] },
        { "before": ["<leader>", "l"], "commands": ["workbench.action.focusRightGroup"] },
        { "before": ["<leader>", "j"], "commands": ["workbench.action.focusBelowGroup"] },
        { "before": ["<leader>", "k"], "commands": ["workbench.action.focusAboveGroup"] },

        // panes
        { "before": ["<leader>", "u"], "commands": [":bprevious"] },
        { "before": ["<leader>", "i"], "commands": [":bnext"] },

        // BOOKMARKS
        { "before": ["<leader>", "m"], "commands": [ "bookmarks.toggle" ] },
        { "before": ["<leader>", "b", "b"], "commands": [ "bookmarks.list" ] },

    ],
