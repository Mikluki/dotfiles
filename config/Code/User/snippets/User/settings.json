    // === VIM CFG

    "vim.leader": "<space>",

    "vim.easymotion": true,
    "vim.surround": true,

    "vim.useSystemClipboard": true,
    "vim.useCtrlKeys": true,
    // "vim.incsearch": true // Show the next match while entering a search
    "vim.hlsearch": true, // Highlight search

    "vim.insertModeKeyBindings": [
        {
            "before": ["j", "j"],
            "after": ["<Esc>"]
        }
    ],
    "vim.visualModeKeyBindings": [
        {
            "before": ["H"],
            "after": ["^"]
        },
        {
            "before": ["L"],
            "after": ["$"]
        },
        { "before": ["<c-j>"], "after": ["<c-d>","z","z"] },
        { "before": ["<c-k>"], "after": ["<c-u>","z","z"] },
        // drag selected lines
        {
            "before": ["J"],
            "commands": ["editor.action.moveLinesDownAction"]
        },
        {
            "before": ["K"],
            "commands": ["editor.action.moveLinesUpAction"]
        },
        // comment selected lines
        {
            "before": ["<leader>", "c"],
            "commands": [ "editor.action.commentLine", "extension.vim_escape" ],
        },
        // Bind > and < in visual mode to indent/outdent lines (repeatable):
        {
            "before": [ ">" ],
            "commands": ["editor.action.indentLines"]
        },
        {
            "before": [ "<" ],
            "commands": ["editor.action.outdentLines"]
        },
        // Bind p in visual mode to paste without overriding the current register:
        {
            "before": [
                "p",
            ],
            "after": [
                "p",
                "g",
                "v",
                "y"
            ]
        },
    ],
        // Bind L to $ and H to ^ in operator pending mode makes yL and dH work like y$ and d^ respectively:
    "vim.operatorPendingModeKeyBindings": [
        {
            "before": ["h"],
            "after": ["^"]
        },
        {
            "before": ["l"],
            "after": ["$"]
        },
    ],
    "vim.normalModeKeyBindingsNonRecursive": [
        {
            "before": ["H"],
            "after": ["^"]
        },
        {
            "before": ["L"],
            "after": ["$"]
        },
        {
            "before": ["j"],
            "after": ["g","j"], "silent": true
        },
        {
            "before": ["k"],
            "after": ["g","k"], "silent": true
        },
        {
            "before": ["<s-u>"],
            "commands": [":redo"]
        },
        {
            "before": ["<leader>", "c"],
            "commands": [ "editor.action.commentLine"],
        },
        {
            "before": ["<esc>"],
            "commands": [":nohl"]
        },
        {
            "before": ["K"],
            "commands": ["lineBreakInsert"], "silent": true
        },
        {
            "before": ["J"],
            "after": ["m","z","J","`","z"], "silent": true
        },
        {
            "before": ["Q"],
            "after": ["@","q"], "silent": true
        },

        // INTELLISENSE
        { "before": ["<leader>", "l", "f"], "commands": ["editor.action.formatDocument"] },
        { "before": ["<leader>", "l", "k"], "commands": ["editor.action.marker.prev"] },
        { "before": ["<leader>", "l", "j"], "commands": ["editor.action.marker.next"] },
        { "before": ["<leader>", "l", "q"], "commands": ["editor.action.quickFix"] },

        { "before": ["g", "h"], "commands": ["editor.action.showDefinitionPreviewHover"] },
        { "before": ["<leader>", "g"], "commands": ["editor.action.revealDefinition"] },
        // { "before": ["<leader>", "r"], "commands": ["workbench.action.showCommands"] },

        // FILES
        { "before": ["<leader>", "f", "r"], "commands": ["fileutils.renameFile"] },
        { "before": ["<leader>", "f", "d"], "commands": ["fileutils.removeFile"] },
        { "before": ["<leader>", "f", "n"], "commands": ["welcome.showNewFileEntries"] },

        { "before": ["<leader>", "w"], "commands": [":w"] },
        { "before": ["<leader>", "q"], "commands": [":wq"] },
        { "before": ["<leader>", "x"], "commands": [":wq"] },
        { "before": ["<leader>", "<Esc>"], "commands": [":q!"] },

        // NAVIGATION
        { "before": ["<leader>", ";"], "commands": ["editor.action.startFindReplaceAction"] },
        // jumping up and down with centetering
        { "before": ["<c-d>"], "after": ["<c-d>","z","z"] },
        { "before": ["<c-u>"], "after": ["<c-u>","z","z"] },
        { "before": ["<c-j>"], "after": ["<c-d>","z","z"] },
        { "before": ["<c-k>"], "after": ["<c-u>","z","z"] },
        // search with centering
        { "before": ["n"], "after": ["n","z","z","z","v"] },
        { "before": ["n"], "after": ["n","z","z","z","v"] },

        // splits
        { "before": ["<leader>", "b", "v"], "commands": [":vsplit"] },
        { "before": ["<leader>", "b", "s"], "commands": [":split"] },

        // GO TO FILE
        { "before": ["<leader>", "p"], "commands": ["workbench.action.quickOpen"] },
        { "before": ["<leader>", "s", "f"], "commands": ["workbench.action.quickOpen"] },

        // // switch b/w buffers
        { "before": ["<leader>", "f","h"], "commands": ["workbench.action.focusLeftGroup"] },
        { "before": ["<leader>", "f","l"], "commands": ["workbench.action.focusRightGroup"] },
        { "before": ["<leader>", "f","j"], "commands": ["workbench.action.focusBelowGroup"] },
        { "before": ["<leader>", "f","k"], "commands": ["workbench.action.focusAboveGroup"] },

        // panes
        { "before": ["<leader>", "k"], "commands": [":bprevious"] },
        { "before": ["<leader>", "j"], "commands": [":bnext"] },

        // BOOKMARKS
        { "before": ["<leader>", "m"], "commands": [ "bookmarks.toggle" ] },
        { "before": ["<leader>", "b"], "commands": [ "bookmarks.list" ] },

    ],
    "vim.handleKeys": {
